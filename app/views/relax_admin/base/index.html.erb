<% page_title(@title) %>
<% page_sub_title(@sub_title) %>

<div class="row">
  <div class="col-sm-12">
    <div class="portlet">
      <div class="portlet-title">
        <div class="caption">
          <% if @is_nestable %>
            <%= link_to(polymorphic_url([:nestable, :relax_admin, @model_class]), class: 'btn btn-circle btn-info btn-sm') do %>
              <i class="fa fa-outdent"></i> Trier
            <% end %>
          <% end %>

          Liste des <%= @model_class.model_name.human(count: 2) %>
        </div>
        <div class="actions">
          <% if can? :create, @model_class %>
            <%= link_to(new_polymorphic_url([:relax_admin, @model_class]), class: 'btn btn-circle btn-primary btn-sm') do %>
              <i class="fa fa-plus"></i> Nouveau
            <% end rescue nil %>
          <% end %>
          <div class="dropdown">
            <a class="btn btn-circle btn-secondary btn-sm dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-share"></i>
              <span class="">Outils</span>
              <i class="fa fa-angle-down fix-dropdown"></i>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="<%= polymorphic_url([:relax_admin, @model_class], format: 'csv') %>">Export
                CSV</a>
              <a class="dropdown-item" href="<%= polymorphic_url([:relax_admin, @model_class], format: 'xls') %>">Export
                XLS</a>
            </div>
          </div>
        </div>
      </div>
      <div class="portlet-body">
        <div class="datatable_wrapper">
          <div class="row">
            <div class="col-sm-12">
              <%= render 'data_list' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
