<% if required?(f.object, a.to_sym) %>
  <%= f.label a.to_sym, class: 'form-control-label required' %>
  <%= f.collection_select a + '_id', a.classify.constantize.all, :id, object_label(a), {prompt: "Sélectionner un(e) #{a.classify.constantize.model_name.human.downcase}"}, class: 'selectize-single', required: true %>
<% else %>
  <%= f.label a.to_sym, class: 'form-control-label' %>
  <%= f.collection_select a + '_id', a.classify.constantize.all, :id, object_label(a), {prompt: "Sélectionner un(e) #{a.classify.constantize.model_name.human.downcase}"}, class: 'selectize-single' %>
<% end %>
