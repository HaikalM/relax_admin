<% if required?(f.object, a.to_sym) %>
  <%= f.label a.to_sym, class: 'form-control-label required' %>
  <%= f.text_field a, class: "form-control bootstrap-material-#{@model_class.type_for_attribute(a).type.to_s}", required: true %>
<% else %>
  <%= f.label a.to_sym, class: 'form-control-label' %>
  <%= f.text_field a, class: "form-control bootstrap-material-#{@model_class.type_for_attribute(a).type.to_s}" %>
<% end %>
