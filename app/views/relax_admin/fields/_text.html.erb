<% if required?(f.object, a.to_sym) %>
  <%= f.label a.to_sym, class: 'form-control-label required' %>
  <%= f.text_area a, class: 'form-control froala-editor', rows: '5', required: true %>
<% else %>
  <%= f.label a.to_sym, class: 'form-control-label' %>
  <%= f.text_area a, class: 'form-control froala-editor', rows: '5' %>
<% end %>
